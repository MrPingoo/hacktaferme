{% extends 'base.html.twig' %}

{% block title %}Work{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Détail d'une session
            </h1>
        </section>

        <div class="content">
        <!-- Small boxes (Stat box) -->

        <!-- Div to show the scanner -->

        <table class="table table-bordered">
            <tr>
                <th>Remarques</th>
                <td>{{ work.remarques }}</td>
            </tr>
            <tr>
                <th>ID FMIS</th>
                <td>{{ work.idFMIS }}</td>
            </tr>
            <tr>
                <th>Date d'intervention</th>
                <td>{{ work.dateBegin ? work.dateBegin|date('d/m/Y') : '' }}</td>
            </tr>
        </table>

        <div class="box-body">
            <h3>Produits</h3>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Quantité</th>
                    <th>Unité</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for workproduct in work.workproduct %}
                    <tr>
                        <td>{{ workproduct.product.title }}</td>
                        <td>{{ workproduct.product.quantity }}</td>
                        <td>{{ workproduct.product.unit }}</td>
                        <td>
                            <a href="#" class="btn btn-primary"><i class="fa fa-edit"></i></a>
                            <a href="#" class="btn btn-danger"><i class="fa fa-remove"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


        <div class="box-body">
            <h3>Parcelles</h3>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>N° Ilot</th>
                    <th>Nom</th>
                    <th>Surface</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for workparcelle in work.workparcelle %}
                    <tr>
                        <td>{{ workparcelle.parcelle.ilotNumber }}</td>
                        <td>{{ workparcelle.parcelle.title }}</td>
                        <td>{{ workparcelle.parcelle.surface }}</td>
                        <td>
                            <a href="#" class="btn btn-danger"><i class="fa fa-remove"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <a href="{{ path('work_index') }}" class="btn btn-primary">Retour</a>
        </div>
    </div>

{% endblock %}
